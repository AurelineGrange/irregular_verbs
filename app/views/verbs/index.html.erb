<div class="container">
	<div class="row">	<div class="col-md-8  col-md-offset-2 col-xs-12">

		<div class="col-md-8 col-md-offset-2 col-xs-12">
			<div class="instructions-header">
				<h1>Welcome!</h1>
				<p class="text-center">Here's a complete list of irregular verbs in english. <br> <br>
					<strong>Happy learning!</strong>
				</p>
			</div>
		</div>

		<div class="verbs-list">
			<div class="col-md-4 col-xs-4 list-header">
				Infinitive
			</div>
			<div class="col-md-4 col-xs-4 list-header">
				Simple Past
			</div>
			<div class="col-md-4 col-xs-4 list-header">
				Past Participle
			</div>

			<% @verbs.each do |verb| %> 
			<div class="col-md-4 col-xs-4 list-verbs">
				<%= verb.infinitive %>
			</div>
			<div class="col-md-4 col-xs-4 list-verbs">
				<%= verb.simple_past %>
			</div>
			<div class="col-md-4 col-xs-4 list-verbs">
				<%= verb.past_participle %>
			</div>
			<% end %>

		</div>

